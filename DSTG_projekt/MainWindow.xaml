<Window x:Class="DSTG_projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DSTG_projekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="548" Width="562">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.ColumnSpan="2" Background="White">

            <DockPanel Height="45" Background="#2F9395" LastChildFill="False" DockPanel.Dock="Top">
                <TextBlock Text="ANALIZA PETLJI PROGRAMA" DockPanel.Dock="Right" Width="412" FontSize="20" FontWeight="Bold" Height="31"/>
            </DockPanel>

            <StackPanel Margin="40,20,20,20" Width="320" DockPanel.Dock="Left" VerticalAlignment="Top">
                <Border BorderThickness="1" BorderBrush="#DDDDDD" 
                  Background="White" Padding="20" 
                  CornerRadius="8">
                    <StackPanel>


                        <TextBlock Text="Dokument:" 
                             Margin="0,16,0,8"
                             FontWeight="Medium"/>
                        <Button x:Name="btnSelectDocument" 
                          Content="Odaberi dokument za enkripciju" 
                          Height="35"
                          Background="#2F9395"
                          Foreground="White"
                          Click="btnSelectDocument_Click"/>

                        <StackPanel Orientation="Horizontal" 
                              Height="25" 
                              Margin="0,8,0,0">
                            <TextBlock x:Name="txtPath" 
                                 Width="230" 
                                 VerticalAlignment="Center"
                                 Visibility="Hidden"
                                 Margin="0,5,0,0"/>
                            <Button x:Name="btnRemoveFile" 
                              Click="btnRemoveFile_Click"
                              Width="25" Height="25"
                              Content="✕"
                              FontWeight="Bold"
                              Background="Red"
                              Foreground="White"
                              Visibility="Hidden"
                              Margin="8,0,0,0"/>


                        </StackPanel>
                        <Label>Odabir jezika</Label>
                        <ComboBox x:Name="cmbLanguage" Margin="10" SelectedValuePath="Content">
                            <ComboBoxItem Content="Python"></ComboBoxItem>
                            <ComboBoxItem Content="C#"></ComboBoxItem>
                            <ComboBoxItem Content="JavaScript"></ComboBoxItem>
                        </ComboBox>
                        <Button x:Name="btnAnalyze" Click="btnAnalyze_Click" Height="30" Content="Analiziraj" Margin="0,10,0,0"></Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </DockPanel>


    </Grid>
</Window>
